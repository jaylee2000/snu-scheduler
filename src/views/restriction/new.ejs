<% layout('layouts/boilerplate') %>
<h1>Add a restriction!</h1>
	
<form action="/restriction" method="POST">
	<div class="col-md-12">
		<label for="restrictionName" class="form-label">Restriction Name(Optional):</label>
		<input type="text" name="restrictionName" class="form-control"><br>
	</div>
	
	<% for(let yoil of daysOfWeek) { %>
		<div class="col-md-4">
			<label for="<%= yoil[1]%>" class="form-label"><%= yoil[0] %> Time:</label>
			<input type="text" id="<%= yoil[1]%>" name="<%= yoil[1] %>" class="form-control"><br>
		</div>
	<% } %>
	<div class="col-md-8">
		<button class="btn btn-primary" type="submit">Submit form</button>
	</div>
</form>
<a href="/restriction">Go back</a>